<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadada"
>
    <!--<com.google.android.exoplayer2.ui.PlayerView-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="130dp"-->
    <!--android:id="@+id/pv_view"-->
    <!--/>-->

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"/>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_change_country"
            android:layout_marginTop="16dp"
            android:textColor="#5d7599"
            android:textSize="20sp"
            android:textAlignment="center"/>
    <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toTopOf="@id/rl_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="播放"
            android:textSize="20sp"
            android:textColor="#5d7599"/>

    <Button
            android:id="@+id/btn_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toTopOf="@id/rl_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_play"
            android:text="上一个"
            android:textSize="20sp"
            android:textColor="#5d7599"/>

    <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toTopOf="@id/rl_list"
            app:layout_constraintLeft_toRightOf="@id/btn_play"
            app:layout_constraintRight_toRightOf="parent"
            android:text="下一个"
            android:textSize="20sp"
            android:textColor="#5d7599"/>

    <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_play"
            app:layout_constraintBottom_toTopOf="@id/rl_list"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="#5d7599"/>

    <Button
            android:id="@+id/btn_change_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="切换国家"
            android:textSize="20sp"
            android:textColor="#5d7599"/>
    <Button
            android:id="@+id/btn_rise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="升速"
            android:textSize="20sp"
            android:textColor="#5d7599"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_low"
            android:text="降速"
            app:layout_constraintLeft_toRightOf="@id/btn_rise"
            android:textSize="20sp"
            android:textColor="#5d7599"
            android:layout_marginLeft="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_list_country"
            app:layout_constraintTop_toBottomOf="@id/btn_change_country"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#f7f0c6"
            android:layout_width="100dp"
            android:layout_height="0dp" android:translationZ="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>